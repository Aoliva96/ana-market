<div class='text-center'>
  {{#if logged_in}}
    <h2>{{name}}</h2>
    <img
      src='{{image}}'
      alt='Item Image'
      style='max-width: 100%; height: auto;'
    />
    <p>{{description}}</p>
    <p>Listed by {{user.name}} on {{format_date date_created}}</p>
    <p>
      Price:
      <span class='dollar-amount'> ${{format_amount item_price}}</span>
    </p>
    <div id='contact-info'>
      <p>Contact Seller:</p>
      <p>Email: {{user.email}}</p>
      <p>Phone: {{user.phone}}</p>
    </div>
    <p>
      <button id='toggle-contact-info' class='btn btn-primary'>Contact Seller</button>
    </p>
  {{else}}
    <a
      id='login-link'
      href='#'
      onclick='redirectToLoginPage(); return false;'
    >Login or Sign Up to See More</a>

  {{/if}}
</div>
{{! Call helper functions for seller info & redirect }}
<script>
  {{{contact_seller}}}
  {{{redirect_user}}}
</script>